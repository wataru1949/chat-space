.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        %li.top-items__icons__btn
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.top-items__icons__btn
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group__name
            = group.name
          .group__message
            = group.show_last_message